<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Blog</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/TravelNotes.styles.css" asp-append-version="true" />
	<script src="~/js/site.js"></script>
	<script src="https://kit.fontawesome.com/f749459404.js" crossorigin="anonymous"></script>
	<style>
		:root {
			--side-color: #728CA3 ;
			
			--background-color: #F3E4C6;
			--primary-color: #1B1924;
			--secondary-color: #B5C1B4;
			--tertiary-color: #DCD9C6;
			--accent-color: #74593D;
			--text-color: #3F3232;
		}

		body {
			background-color: var(--background-color);
			margin: 0;
			padding: 0;
		}
		#allContainer {
			display: flex;
		}

		#sideBarSpace {
			width: 100px;
		}

		#sideBar {
			width: 100px;
			height:90%;
			position: fixed;
			right: 0px;
			top: 0px;
			background-color: var(--side-color);
			border-radius: 10px; /* 圆角半径 */
			box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); /* 阴影 */
			text-align:center;
		}

			#sideBar a {
				text-decoration: none;
				color: white;
			}
			
		#sideBar span{
			text-decoration:none;
			color:white;
		}
		.smallItem{
			width: 20px; /* 設置圖片的寬度 */
			height: 20px; /* 設置圖片的高度 */
		}
		.middleItem{
			width: 40px; /* 設置圖片的寬度 */
			height: 40px; /* 設置圖片的高度 */ */
		}
	</style>
</head>
<body>
	<div id="sideBar">
		<div class="row my-4">
			<a asp-controller="Home" asp-action="Index">
				Logo
				</a>
		</div>
		<div class="row my-4">
			@if (!User.Identity.IsAuthenticated)
			{
				<a asp-controller="Member" asp-action="Login">
					<i class="fa-solid fa-user fa-2xl" style="color: #ffffff;"></i>
				</a>
			}
			else
			{

				<a asp-controller="Member" asp-action="Logout">
					<i class="fa-solid fa-right-from-bracket fa-lg" style="color: #ffffff;"></i>
				</a>
			}
		</div>

		
		<div class="row my-4">
			<a asp-controller="Article" asp-action="CreateDraft">
				<i class="fa-regular fa-pen-to-square fa-sm" style="color: #ffffff;"></i>
				<span>寫文章</span>
			</a>
		</div>
		<div class="row my-4">
			<a asp-controller="Article" asp-action="Draft">
				<i class="fa-solid fa-list fa-sm" style="color: #ffffff;"></i>
				<span>草稿區</span>
			</a>
		</div>
		<div class="row my-4">
			<a asp-controller="Album" asp-action="Album">
				<i class="fa-regular fa-images fa-sm" style="color: #ffffff;"></i>
				<span>相簿</span>
			</a>
		</div>
		<div class="row my-4">
			<a asp-controller="PersonalPage" asp-action="PersonalPage">個人頁面</a>
		</div>
		<div class="row my-4">
			<a asp-controller="AiRecommend" asp-action="Index">
				<i class="fa-regular fa-compass fa-sm" style="color: #ffffff;"></i>
				推薦趣
				</a>
		</div>
		<div class="row my-4">
			<a asp-controller="PersonalPage" asp-action="ViewSchedule">
				<i class="fa-regular fa-compass fa-sm" style="color: #ffffff;"></i>
				我的最愛
			</a>
		</div>
	</div>
	<div id="allContainer">

		<div class="container">
			<main role="main" class="pb-3">
				@RenderBody()
			</main>
		</div>
		<div id="sideBarSpace">
		</div>
	</div>
	
</body>
</html>