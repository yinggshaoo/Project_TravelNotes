@using TravelNotes.Models;
@model Array
@{
    int count = 0;
}

<style>
    #filter_bk {
        background-color: white;
        border-radius: 5px;
    }

    .form-select {
        width: 200px;
    }
</style>


<div class="container" id="filter_bk">
    <div class="row justify-content-center align-items-center">
        <h1 class="text-center mb-4">區域推薦啟動!</h1>
        <div class="row">
            <div class="col-md">
                <select id="cities" class="form-select mb-4" aria-label="Default select example">
                    <option value="">請選一個縣市</option>
                    <option value="嘉義市">嘉義市</option>
                    <option value="桃園市">桃園市</option>
                    <option value="臺北市">臺北市</option>
                    <option value="新北市">新北市</option>
                    <option value="嘉義縣">嘉義縣</option>
                    <option value="澎湖縣">澎湖縣</option>
                    <option value="其它">其它</option>
                    <option value="金門縣">金門縣</option>
                    <option value="新竹縣">新竹縣</option>
                    <option value="新竹市">新竹市</option>
                    <option value="花蓮縣">花蓮縣</option>
                    <option value="臺南市">臺南市</option>
                    <option value="高雄市">高雄市</option>
                    <option value="基隆市">基隆市</option>
                    <option value="南投縣">南投縣</option>
                    <option value="宜蘭縣">宜蘭縣</option>
                    <option value="苗栗縣">苗栗縣</option>
                    <option value="雲林縣">雲林縣</option>
                    <option value="連江縣">連江縣</option>
                    <option value="臺中市">臺中市</option>
                    <option value="屏東縣">屏東縣</option>
                    <option value="彰化縣">彰化縣</option>
                    <option value="臺東縣">臺東縣</option>
                </select>
            </div>
            <div class="col-md">
                <button id="locationBtn" type="submit" class="btn btn-outline-secondary">區域搜尋</button>
            </div>
        </div>

        <div class="row" id="additionalCards"></div>

        <nav aria-label="Page navigation example">
            <ul class="pagination" id="pagination">
                <!-- Pagination items will be dynamically generated here -->
            </ul>
        </nav>

    </div>
</div>


