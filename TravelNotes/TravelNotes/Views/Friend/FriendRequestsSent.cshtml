@model List<FriendRequest>
<style>
    #friendList {
        border-radius: 50px;
        background-color: whitesmoke;
    }

    .friendListUnit {
        border-radius: 1rem;
        margin: 2rem;
    }

        .friendListUnit > * {
            margin: 0.5rem;
        }
</style>

<div id="friendList">
    @if (Model.Count() == 0)
    {
        <p>尚無送出邀請</p>
    }
    @foreach (var item in Model)
    {
        <div class="friendListUnit">
            <p>序列號:@item.uuid</p>
            @switch (item.Status)
            {
                case 1:
                    <p>已接受</p>
                    break;
                case 0:
                    <p>已送出</p>
                    break;
                case -1:
                    <p>已拒絕</p>
                    break;
                default:
                    <p>內部伺服器錯誤</p>
                    break;
            }
            @*<p>送出者:@item.SenderUserId</p>*@
            <p>受邀者:@item.ReceiverUserId</p>
        </div>
    }
</div>